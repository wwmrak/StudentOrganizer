<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wwmrak.main.schedule.EventActivity">

    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="21dp"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:touchscreenBlocksFocus="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAllCaps="false"
        android:id="@+id/button10"
        android:layout_marginTop="22dp"
        android:textColor="#030303"
        android:onClick="setDateEventFrom"
        android:layout_below="@+id/static_spinner"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAllCaps="false"
        android:id="@+id/button11"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:textColor="#030303"
        android:onClick="setDateEventTo" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/button10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event from :"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignStart="@+id/editText6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event to:"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/textView9"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event type :"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/static_spinner"
        android:layout_alignBottom="@+id/static_spinner"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary :"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView6" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAllCaps="false"
        android:id="@+id/button12"
        android:layout_marginTop="22dp"
        android:textColor="#030303"
        android:layout_below="@+id/editText8"
        android:layout_alignEnd="@+id/button11"
        android:onClick="setDateReminder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder date :"
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button12"
        android:layout_alignEnd="@+id/textView11"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder time :"
        android:id="@+id/textView13"
        android:textSize="20dp"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="33dp"
        android:textAlignment="textEnd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textAllCaps="false"
        android:id="@+id/button13"
        android:textColor="#030303"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/button12"
        android:onClick="setTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/button14"
        android:textColor="#030303"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/editText10"
        android:onClick="saveButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:id="@+id/button15"
        android:textColor="#030303"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editText10"
        android:onClick="cancelButton" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:layout_alignBottom="@+id/button12"
        android:layout_toEndOf="@+id/button14" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_alignBottom="@+id/textView13"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
