<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wwmrak.main.profile.CreateDayActivity"
    android:id="@+id/recording1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Recording"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="24dp"
        android:phoneNumber="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/textView15"
        android:layout_marginTop="122dp"
        android:textSize="24dp"
        android:layout_below="@+id/textView14"
        android:layout_toStartOf="@+id/textView14" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:layout_alignBottom="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAllCaps="false"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/editText11"
        android:layout_toEndOf="@+id/textView14"
        android:onClick="setDate"
        android:textColor="#050505" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAllCaps="false"
        android:id="@+id/button16"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignEnd="@+id/button3"
        android:onClick="createLecture2"
        android:nestedScrollingEnabled="true"
        android:textColor="#030303" />

</RelativeLayout>
